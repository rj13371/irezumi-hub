<% layout('layout/boilerplate') %>
<div id="map" style="width:100%; height:500px"></div>

    <h1 class="display-5 text-center p-3">Tattoo Parlours</h1>
    <ul>
        <% for (let tattooShop of tattooShops) { %>
            <div class="card p-3">
                <div class="row">
                    <div class="col-md-4">
                        <% if (tattooShop.images.length) {%>
                            <img class="img-fluid" src="<%=tattooShop.images[0].url%>" alt="">
                            <% }else { %>
                                    <img class="img-fluid" src="" alt="">
                                    <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h4 class="card-title">
                                <%= tattooShop.title%>
                            </h4>
                            <h4 class="card-location">
                                <%= tattooShop.location%>
                            </h4>

                            <p class="card-text"><%= tattooShop.description%></p>

                            <a class="btn btn-primary " href="/tattooShops/<%= tattooShop._id%>" role="button">View
                                Tattoo Shop</a>
                        </div>
                    </div>
                </div>
            </div>
            <% }%>
    </ul>

    <script>
        const mapToken = '<%-process.env.MAP_TOKEN%>'
        const tattooShops = {features: JSON.parse('<%-JSON.stringify(tattooShops)%>')}
    </script>

    <script src="/javascripts/clusterMap.js"></script>