<% layout('layout/boilerplate') %>
<div class="row">
<h1 class="display-5 text-center">Register</h1>
<form class="needs-validation col-4 offset-4" action="/register" method="POST" novalidate>
<div class="mb-3">
    <label for="username" class="form-label">Username</label>
    <input type="text" required class="form-control" id="username" name="username" rows="3"></input>
  <div class="valid-feedback">Looks good!</div>
  </div>

  <div class="mb-3">
    <label for="email" class="form-label">Email</label>
    <input type="email" required class="form-control" id="email" name="email" rows="3"></input>
  <div class="valid-feedback">Looks good!</div>
  </div>

  <div class="mb-3">
    <label for="password" class="form-label">Password</label>
    <input type="password" required class="form-control" id="password" name="password" rows="3"></input>
  <div class="valid-feedback">Looks good!</div>
  </div>

  <button type="submit" class="btn btn-primary mb-3">Register</button>

</form>

</div>